# Threads Admin Panel - Environment Configuration
# Copy this file to .env and update with your credentials

#############################################################################
# SERVER CONFIGURATION
#############################################################################

# Port for the application server
PORT=8000

# Host for the application server
HOST=localhost

# Environment: development, production, staging
NODE_ENV=development

#############################################################################
# THREADS API CREDENTIALS
#############################################################################

# Get these from: https://developers.facebook.com/apps/
# Create a new app -> Select "Use Cases" -> Add "Threads API"

# Your Threads App ID
THREADS_APP_ID=your_app_id_here

# Your Threads App Secret
THREADS_APP_SECRET=your_app_secret_here

# The redirect URI after OAuth login (must match in Facebook App settings)
THREADS_REDIRECT_URI=http://localhost:8000/login

# Graph API Version (optional, defaults to v1.0)
# Available versions: v1.0, v21.0, v22.0, etc.
GRAPH_API_VERSION=v1.0

#############################################################################
# SECURITY
#############################################################################

# Session secret for session encryption
# Generate a random string: openssl rand -hex 32
SESSION_SECRET=change_this_to_random_string

# SSL Certificate paths (for production HTTPS)
# Leave empty for development HTTP
SSL_KEY_PATH=
SSL_CERT_PATH=

# SSL certificate verification
# Set to 'false' only for development with self-signed certificates
REJECT_UNAUTHORIZED=true

#############################################################################
# DATABASE
#############################################################################

# SQLite database file path
# Relative to project root or absolute path
DB_PATH=./threads_admin.db

#############################################################################
# UPLOAD CONFIGURATION
#############################################################################

# Directory for uploaded files
UPLOAD_DIR=./public/uploads

# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed image types (comma-separated)
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp

#############################################################################
# SESSION CONFIGURATION
#############################################################################

# Session expiration time in milliseconds
# Default: 7 days (7 * 24 * 60 * 60 * 1000)
SESSION_MAX_AGE=604800000

#############################################################################
# RATE LIMITING (optional)
#############################################################################

# Rate limit requests per window
RATE_LIMIT_MAX=100

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW=900000

#############################################################################
# LOGGING
#############################################################################

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file path (leave empty to console only)
LOG_FILE=

#############################################################################
# FEATURES
#############################################################################

# Enable/disable scheduler
SCHEDULER_ENABLED=true

# Scheduler check interval in cron format
# Default: * * * * * (every minute)
SCHEDULER_CRON=* * * * *

# Enable analytics fetching
ANALYTICS_ENABLED=true

#############################################################################
# DEVELOPMENT OPTIONS
#############################################################################

# Enable debug mode
DEBUG=false

# Enable SQL query logging
SQL_DEBUG=false

# Auto-reload on file changes (use nodemon)
AUTO_RELOAD=false
