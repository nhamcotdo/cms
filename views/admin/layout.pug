    meta(name='viewport' content='width=device-width, initial-scale=1.0')
  body
    aside.sidebar
      .sidebar-header
        h2 Threads Admin

      if currentAccount
        .account-switcher
          .current-account
            if currentAccount.threads_profile_picture_url
              img.account-avatar(src=currentAccount.threads_profile_picture_url, alt=currentAccount.username)
            else
              .account-avatar-placeholder= currentAccount.username.charAt(0).toUpperCase()
            .account-info
              .account-username= currentAccount.username
              .account-status Online
          .account-dropdown
            a.dropdown-item(href='/admin/accounts') Manage Accounts

